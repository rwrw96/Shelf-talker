<header>
  <% if !user_signed_in? %>
  <div class="header_item">
  <%= link_to "HOME", root_path, class: "editlink" %>
  <%= link_to "ABOUT" , homes_about_path, class: "editlink" %>
  <%= link_to "SIGNIN" , new_user_session_path, class: "editlink" %>
  <%= link_to "SIGNUP" ,  new_user_registration_path, class: "editlink" %>
  </div>
  <% elsif current_user.admin? %>
  <div class="header_item">
  <%= link_to "ADMIN USERS", admin_users_path, class: "editlink" %>
  <%= link_to "ADMIN REVIEWS" , admin_reviews_path, class: "editlink" %>
  <%= link_to "MYPAGE" , user_path(current_user.id), class: "editlink" %>
  <%= link_to "LOGOUT" ,  destroy_user_session_path, method: :delete, class: "editlink" %>
  </div>
  <% else %>
  <div class="header_item">
  <%= link_to "HOME", root_path, class: "editlink" %>
  <%= link_to "REVIEWS" , reviews_path, class: "editlink" %>
  <%= link_to "MYPAGE" , user_path(current_user.id), class: "editlink" %>
  <%= link_to "LOGOUT" ,  destroy_user_session_path, method: :delete, class: "editlink" %>
  </div>
  <% end %>
  <div class="logo">
    <%= link_to ShelfTalker , root_path, class: "editlink" %>
  </div>
</header>


<div class="container">
  <div class="row">
    <div class="welcome_wrapper offset-3 col-6">
      <h2>please wait...</h2>
      <p>只今確認メールを送信しました</p>
      <p>URLからログインをお願い致します</p>
    </div>
  </div>
</div>