<div class="container">
  <div class="row">
    <div class="offset-3 col-6">
      <div class="error_title">
        <%= flash[:alert] %>
      </div>
    <%= form_with model:@user, local:true do |f| %>
    <label>名前</label>
    <%= f.text_field :name ,class: "form-control", id: "edit_name" %>
    <label>自己紹介文</label>
    <%= f.text_area :introduction,class: "form-control", id: "edit_introduction", rows: "4" %>
    <%= f.submit "更新", class: "btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>



