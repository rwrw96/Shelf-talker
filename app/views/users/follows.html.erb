<div class="container">
    
      <div class="users">
        <h2 class="top">Follow</h2>
        <table class="table table-hover">
          <div class="thead">
            <th class="th1">follow</th>
            <th class="th2">review</th>
            <th class="th3">introduction</th>
          </div>
        <% @user.followings.each do |follow| %>
        <tbody>
          <td><%= link_to follow.name, user_path(follow.id) %></td>
          <td><%= "レビュー数: #{follow.reviews.count}" %></td>
          <td><%= follow.introduction %></td>
          </tbody>
        <% end %>
        </table>
       
    </div>
</div>