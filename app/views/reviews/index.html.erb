<div class="container">
  <h2 class="top">Reviews</h2>
  <div class="reviews_wrapper">
    <div id="review_lists">
      <!--レビュー一覧表示-->
      <div class="row">
        <div class="offset-5 col-7">
          <div class="row">
            <div class="offset-4 col-4">
              <div class="reviews_sort">
                <%= sort_link(@q, :rate, "評価") %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%= render 'review_list' %>
    </div>
    <div class="more">
      <div class="offset-3 col-6">
        <!--非同期通信でページネーション-->
        <%= link_to_next_page @reviews, 'see more', remote: true, id: 'view_more' %>
      </div>
    </div>
  </div>
</div>